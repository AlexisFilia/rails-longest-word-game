<h1>New Game</h1>
<div id="letters">
  <% @array.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>


<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="proposition" id="form">
    What is the longest word you can find?
  </label>
  <div id="form">
    <input type="text" name="word" placeholder="your word..." class="text-box">
    <input type="submit" class="btn btn-primary">
    <input type="hidden" name="grid" value="<%= @array.join %>">
    <input type="hidden" name="total_score" value="<%= @total_score %>">
  </div>
</form>
